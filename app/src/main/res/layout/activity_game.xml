<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textViewCurrentPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_s_turn_X"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCurrentPlayer">

        <TextView
            android:id="@+id/textViewPlayerX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_x_0"
            android:textColor="@color/white"
            android:background="@drawable/style_text_view_player1"
            android:textSize="18sp"
            android:padding="10dp"
            android:elevation="4dp"
            android:translationZ="6dp"/>

        <TextView
            android:id="@+id/textViewPlayerO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_O_0"
            android:textColor="@color/white"
            android:background="@drawable/style_text_view_player2"
            android:textSize="18sp"
            android:padding="10dp"
            android:elevation="4dp"
            android:translationZ="6dp"
            android:layout_marginStart="32dp"/>
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:alignmentMode="alignMargins"
        app:useDefaultMargins="true"
        app:columnCount="3"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/cell01"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell03"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell04"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell05"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell06"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell07"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell08"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>

        <TextView
            android:id="@+id/cell09"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#66444466"
            android:shadowColor="#42A5F5"
            android:shadowRadius="6"
            android:textStyle="bold"
            android:elevation="6dp"
            android:translationZ="8dp"/>
    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/btnRoundReset"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/round_reset"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:backgroundTint="#FFEB3B"
        app:layout_constraintTop_toBottomOf="@id/gridLayoutGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:shadowColor="#FFEB3B"
        android:shadowRadius="6"
        app:cornerRadius="2dp"
        android:elevation="6dp"
        android:translationZ="8dp"/>

    <Button
        android:id="@+id/btnGameReset"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/game_reset"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:backgroundTint="#FFC107"
        app:layout_constraintTop_toBottomOf="@id/btnRoundReset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:shadowColor="#FFC107"
        android:shadowRadius="6"
        app:cornerRadius="2dp"
        android:elevation="6dp"
        android:translationZ="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
